<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:orientation="vertical"
    android:id="@+id/quest_layout">
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:id="@+id/quest_top_layout">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/darkGray"
            android:scaleType="centerCrop"
            android:id="@+id/mobile_background_img" />
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:layout_height="70dp"
            android:paddingStart="10dp"
            android:paddingEnd="7dp"
            android:id="@+id/quest_text_layout"
            android:layout_gravity="center_vertical"
            android:baselineAligned="true"
            android:clickable="true">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/mobile_restaurant_icon"
                android:padding="0dp"
                android:src="@android:color/white"
                android:clickable="true"
                android:layout_gravity="center_vertical" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/rest_offer_layout"
                android:padding="5dp"
                android:paddingStart="10dp"
                android:layout_margin="0dp"
                android:layout_gravity="right"
                android:clickable="false">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/test_rest"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:id="@+id/restaurantName"
                    android:layout_alignParentTop="false"
                    android:layout_marginTop="10dp"
                    android:clickable="false"
                    android:allowUndo="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:text="@string/test_offer"
                    android:id="@+id/title"
                    android:layout_below="@+id/restaurantName"
                    android:layout_marginTop="5dp"
                    android:clickable="false" />
                <TextView
                    android:id="@id/time_remain_textview"
                    android:paddingStart="7dp"
                    android:paddingEnd="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/test_time"
                    android:textColor="@android:color/white"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@+id/title" />
                <ImageView
                    android:id="@id/mobile_method_icon"
                    android:layout_alignBottom="@id/restaurantName"
                    android:layout_alignParentEnd="true"
                    android:layout_height="15dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="15dp"
                    android:src="@drawable/duo_quest_white" />
                <ImageView
                    android:id="@id/mobile_quest_icon"
                    android:layout_alignBottom="@id/mobile_method_icon"
                    android:layout_height="15dp"
                    android:layout_marginEnd="5dp"
                    android:layout_toStartOf="@id/mobile_method_icon"
                    android:layout_width="15dp"
                    android:src="@drawable/duo_quest_white" />


            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/quest_info_text"
        android:textColor="@android:color/black"
        android:background="@color/white"
        android:textSize="14sp"
        android:text="@string/coupon_info_test"
        android:singleLine="false"
        android:textAlignment="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:theme="@style/AppTheme" />
    <RelativeLayout
        android:id="@+id/quest_bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/black"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="7.5dp"
        android:paddingTop="7.5dp">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:src="@drawable/closed_chest"
            android:id="@+id/chest_icon"
            android:layout_alignParentEnd="true"
            android:background="@drawable/red_round_pressable"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:padding="2dp" />
        <TextView
            android:id="@+id/progressbar_text"
            android:gravity="end"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="@string/wins"
            android:textColor="@color/white"
            android:textSize="8sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="7dp"
            android:id="@+id/progressBar"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/progressbar_text"
            android:layout_toLeftOf="@+id/chest_icon"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:progress="12"
            android:indeterminate="false"
            android:progressDrawable="@drawable/quest_progressbar" />


    </RelativeLayout>
</LinearLayout>