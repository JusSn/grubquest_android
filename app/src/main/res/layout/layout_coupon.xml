<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="0dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    android:id="@+id/coupon_layout">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="130dp">

        <ImageButton
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:src="#000000"
            android:id="@+id/restaurant_image"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/time_remain_textview"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_width="125dp"
            android:layout_height="20dp"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:text="@string/test_time"
            android:background="@drawable/round_black_10"
            android:layout_gravity="center_vertical"
            android:gravity="bottom|center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:weightSum="1"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:id="@+id/offertext_layout"
        android:layout_gravity="center_vertical"
        android:baselineAligned="true">
        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/restaurant_icon_image"
            android:padding="5dp"
            android:src="@android:color/black"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.7"
            android:id="@+id/rest_offer_layout"
            android:padding="5dp"
            android:paddingStart="10dp"
            android:layout_margin="0dp"
            android:layout_gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_rest"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/restaurant_textview"
                android:layout_alignParentTop="false"
                android:layout_marginTop="5dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:text="@string/test_offer"
                android:id="@+id/offer_textview"
                android:layout_below="@+id/restaurant_textview"
                android:layout_marginTop="5dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"
            android:layoutDirection="rtl"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/type_icon_1"

                android:src="@drawable/solo_filled"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/type_icon_2"

                android:src="@drawable/solo_filled"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/coupon_info_text"
        android:textColor="@android:color/white"
        android:background="@color/grayDark"
        android:textSize="16sp"
        android:text="@string/coupon_info_test"
        android:singleLine="false"
        android:textAlignment="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:theme="@style/AppTheme" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="1"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:background="@color/grayLight">

        <Button
            android:id="@+id/view_reward_button"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:text="@string/view_reward"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="0.67"
            android:background="@drawable/round_red_5"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.03" />
        <Button
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:text="@string/cancel"
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="0.3"
            android:background="@drawable/round_red_5"
            android:theme="@style/AppTheme" />
        
    </LinearLayout>
</LinearLayout>