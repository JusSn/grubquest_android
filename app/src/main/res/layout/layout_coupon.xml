<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="0dp"
    android:layout_marginTop="7dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:orientation="vertical"
    android:id="@+id/coupon_layout">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="130dp">

        <ImageView
            android:clickable="true"
            android:scaleType="centerCrop"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:src="#000000"
            android:id="@+id/backgroundImg"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/time_remain_textview"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:text="@string/test_time"
            android:background="@drawable/black_round_10"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="65dp"
        android:weightSum="1"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:id="@+id/offertext_layout"
        android:layout_gravity="center_vertical"
        android:baselineAligned="true"
        android:clickable="true">
        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/mobile_restaurant_icon"
            android:padding="7dp"
            android:src="@android:color/black"
            android:clickable="true" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.7"
            android:id="@+id/rest_offer_layout"
            android:padding="5dp"
            android:paddingStart="10dp"
            android:layout_margin="0dp"
            android:layout_gravity="right"
            android:clickable="false">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_rest"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:id="@+id/restaurantName"
                android:layout_alignParentTop="false"
                android:layout_marginTop="5dp"
                android:clickable="false"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:text="@string/test_offer"
                android:id="@+id/frontDescription"
                android:layout_below="@+id/restaurantName"
                android:layout_marginTop="5dp"
                android:clickable="false" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"
            android:layoutDirection="rtl"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/mobile_method_icon"

                android:src="@drawable/solo_filled"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/mobile_quest_icon"

                android:src="@drawable/solo_filled"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/description"
        android:textColor="@android:color/white"
        android:background="@color/darkGray"
        android:textSize="16sp"
        android:text="@string/coupon_info_test"
        android:singleLine="false"
        android:textAlignment="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:theme="@style/AppTheme" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="1"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:background="@color/lighterGray">

        <Button
            android:id="@+id/view_reward_button"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:text="@string/view_reward"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/red_round_pressable"/>

        <!--<View-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="0.03" />-->
        <!--<Button-->
            <!--android:textSize="16sp"-->
            <!--android:textColor="#FFFFFF"-->
            <!--android:text="@string/cancel"-->
            <!--android:id="@+id/cancel_button"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="35dp"-->
            <!--android:layout_weight="0.3"-->
            <!--android:background="@drawable/red_round_pressable"-->
            <!--android:theme="@style/AppTheme" />-->

    </LinearLayout>
</LinearLayout>